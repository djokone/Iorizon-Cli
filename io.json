{
  "name": "iorizon-core",
  "engine": {
    "folder": "iorizon-core"
  },
  "alias": {
    "sites": "e:/sites",
    "factory": "@sites/myModules/",
    "cakephp3": "@sites/Cakephp3",
    "imperial": "@cakephp3/Imperial",
    "npm": "@factory/NPM",
    "io": "@npm/Iorizon",
    "ioCore": "@npm/Cli/Iorizon-cli",
    "workflow": "@factory/workflow",
    "builds": "@npm/Builds"
  },
  "main": "./bin/iorizon",
  "options": {
    "--deep|-d": ["number"],
    "--test|-t": ["number"],
    "--global|-g": false,
    "--current|-c": false
  },
  "workflow": "@workflow/imperial",
  "modules": {
    "init": {
      "url": "./bin/cmd/init",
      "options": {
        "global|-g": {
          "extend": true
        }
      }
    },
    "alias": {
      "url": "./bin/cmd/alias"
    },
    "workflow": {
      "url": "./bin/cmd/workflow"
    }
  }
}